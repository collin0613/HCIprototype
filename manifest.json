{
  "manifest_version": 3,
  "name": "HCIprototype",
  "author": "Vincent Cancelliere",
  "version": "1.0",
  "description": "Injects a student-centered GUI overlay into Outlook, providing customizable filters, priority inbox, and simplified navigation to streamline email management.",
  "action": {
    "default_icon": {
      "16": "images/HCIprototype.png",
      "48": "images/HCIprototype.png",
      "128": "images/HCIprototype.png"
    }
  },
  "icons": {
    "16": "images/HCIprototype.png",
    "48": "images/HCIprototype.png",
    "128": "images/HCIprototype.png"
  },
  "host_permissions": [
    "https://outlook.office365.com/mail/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://outlook.office365.com/mail/*"
      ],
      "js": [
        "content/script.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage"
  ]
}
